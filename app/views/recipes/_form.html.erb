<%= form_with(model: recipe, class: 'my-4') do |form| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :name, style: "display: block",class: "fw-bold form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Recipe Name" %>
  </div>

  <div class="mb-3">
    <%= form.label :preparation_time, style: "display: block",class: "fw-bold form-label" %>
    <%= form.text_field :preparation_time, class: "form-control", placeholder: "Preparation time" %>
  </div>

  <div class="mb-3">
    <%= form.label :cooking_time, style: "display: block",class: "fw-bold form-label" %>
    <%= form.text_field :cooking_time, class: "form-control", placeholder: "Cooking time" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: "display: block",class: "fw-bold form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
  </div>

    <!-- Your existing form code here -->
  <div id="recipe_steps" class="mb-3">
    <!-- Add a new input field for the new step description -->
    <textarea type="text" id="new_step_description" placeholder="New Step Description"></textarea>
    <%= link_to 'Add Step', '#', class: 'add-step btn btn-primary btn-sm' %>

    <!-- Container to hold the dynamically added steps -->
    <div id="steps_container"></div>
  </div>


  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>

  <script>
      document.addEventListener("DOMContentLoaded", function() {
          const addStepButton = document.querySelector(".add-step");
          const stepsContainer = document.getElementById("steps_container");

          addStepButton.addEventListener("click", function(event) {
              event.preventDefault();
              const newStepDescription = document.getElementById("new_step_description").value;
              stepsContainer.insertAdjacentHTML("beforeend", `<div class="step">${newStepDescription}</div>`);
          });
      });
  </script>

<% end %>
