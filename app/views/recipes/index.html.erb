<div class="col-md-10">

<%= link_to 'Add Recipe', new_recipe_path, class: 'btn btn-primary float-end' %>
<h2>List of Recipes</h2>

  <% @recipes.each do |recipe| %>
    <div class="border p-4 mb-2">
      <%= link_to recipe.name, recipe_path(recipe.id), style: "text-decoration: none; color: inherit;" %>
      <p><%= recipe.description %></p>
      <%= button_to 'Remove', recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %>
    </div>
  <% end %>

</div>
<script>
    var elem = document.querySelector("a.recipe.name");
    elem.outerHTML = "<h2>" + elem.innerHTML + "</h2>";
</script>